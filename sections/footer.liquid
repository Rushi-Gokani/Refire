{% stylesheet %}
  /* Responsive grid matching reference: 4 columns desktop, stacked on mobile */
  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--gap-2xl);

    @media screen and (min-width: 990px) {
      grid-template-columns: 1.2fr 1fr 1fr 1.2fr;
      align-items: start;
    }
  }

  /* Mobile layout improvements */
  @media screen and (max-width: 989px) {
    .footer-grid {
      gap: var(--gap-xl);
    }
  }

  /* Column spacing hygiene */
  .footer-grid > * {
    min-width: 0;
  }

  /* Headings visual weight like reference */
  .section-wrapper footer .group .group__heading,
  .section-wrapper footer .menu .menu__heading,
  .section-wrapper footer .email-signup__heading {
    font-weight: 600;
    font-size: var(--font-size--lg);
    margin-bottom: var(--gap-md);
  }

  /* Social row - positioned below contact info */
  .social-icons__wrapper {
    justify-content: flex-start;
    margin-top: var(--gap-md);
  }

  /* Get direction link styling */
  .footer-grid a[href="#"] {
    text-decoration: underline;
    color: var(--color-foreground);
    font-size: 0.875rem;
  }

  .footer-grid a[href="#"]:hover {
    color: var(--color-foreground-muted);
  }

  /* Email signup input + button inline */
  .email-signup .form {
    display: flex;
    gap: var(--gap-sm);
  }

  .email-signup .form input[type="email"] {
    flex: 1 1 auto;
  }

  /* Payment icons row, right aligned on desktop */
  .payment-icons .payment-icons__list {
    justify-content: center;

    @media screen and (min-width: 990px) {
      justify-content: flex-end;
    }
  }

  /* Footer utilities layout improvements */
  .footer-utilities {
    position: relative;
  }

  /* Scroll to top button positioning */
  .scroll-to-top-button {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 1000;
  }

  @media screen and (max-width: 750px) {
    .scroll-to-top-button {
      bottom: 15px;
      right: 15px;
    }
  }
{% endstylesheet %}
