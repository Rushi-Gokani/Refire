{% doc %}
  @prompt
    a split screen section, with an image on the left half side, and on the right side we have one headline, followed by a paragraph content, followed by a button.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-screen-{{ ai_gen_id }} {
    display: flex;
    min-height: {{ block.settings.section_height }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-split-screen__image-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  .ai-split-screen__image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-split-screen__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-split-screen__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-split-screen__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: #666;
    font-size: 14px;
    text-align: center;
    pointer-events: none;
  }

  .ai-split-screen__content-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_alignment }};
    padding: {{ block.settings.content_padding }}px;
    background-color: {{ block.settings.content_background_color }};
  }

  .ai-split-screen__headline-{{ ai_gen_id }} {
    color: {{ block.settings.headline_color }};
    font-size: {{ block.settings.headline_size }}px;
    margin: 0 0 {{ block.settings.content_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-split-screen__paragraph-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0 0 {{ block.settings.content_spacing }}px 0;
  }

  .ai-split-screen__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .ai-split-screen__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-split-screen-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
      min-height: auto;
    }

    .ai-split-screen__image-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_image_height }}px;
    }

    .ai-split-screen__content-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_content_padding }}px;
    }

    .ai-split-screen__headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.8 }}px;
    }

    .ai-split-screen__paragraph-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-split-screen-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-split-screen__image-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 1000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
      >
    {% else %}
      <div class="ai-split-screen__image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-split-screen__empty-state-{{ ai_gen_id }}">
          Add an image to complete your split screen
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-split-screen__content-{{ ai_gen_id }}">
    {% if block.settings.headline != blank %}
      <h2 class="ai-split-screen__headline-{{ ai_gen_id }}">{{ block.settings.headline }}</h2>
    {% endif %}

    {% if block.settings.paragraph != blank %}
      <div class="ai-split-screen__paragraph-{{ ai_gen_id }}">{{ block.settings.paragraph }}</div>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-split-screen__button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

