<script>
  (function(){
    class WhyBuyCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = null;
        this.items = [];
        this.originalCount = 4; // original features count
        this.currentIndex = 0; // index into the cloned items array
        this.itemWidth = 0;
        this.isDragging = false;
        this.startX = 0;
        this.currentX = 0;
        this.initialTransform = 0;
        this.transitionDuration = 350; // ms
        this._resizeTimer = null;
        this.srLiveRegion = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-why-buy-carousel-track-{{ ai_gen_id }}');
        this.srLiveRegion = this.querySelector('.ai-why-buy-sr-only-{{ ai_gen_id }}');
        if (!this.track) return;

        // Build clones for infinite loop (prepend last N, append first N)
        this.setupClones();

        // refresh items list & sizes
        this.items = Array.from(this.track.children);
        this.calculateItemWidth();
        // Start in the "first original" position after the prepended clones
        this.currentIndex = this.originalCount;
        this.jumpToCurrent(); // instant set without transition

        // events
        this.setupEventListeners();
        this.updateCenteredItem();
        this.announceCurrent();
      }

      disconnectedCallback() {
        this.removeEventListeners();
      }

      setupClones() {
        const children = Array.from(this.track.children);
        // guard: if track already has clones, do nothing
        if (children.length >= this.originalCount * 3) {
          // already cloned
          return;
        }

        const firstN = children.slice(0, this.originalCount);
        const lastN = children.slice(-this.originalCount);

        // clone lastN and prepend in same order
        lastN.forEach(node => {
          const clone = node.cloneNode(true);
          clone.classList.add('ai-clone');
          this.track.insertBefore(clone, this.track.firstChild);
        });

        // clone firstN and append
        firstN.forEach(node => {
          const clone = node.cloneNode(true);
          clone.classList.add('ai-clone');
          this.track.appendChild(clone);
        });
      }

      calculateItemWidth() {
        // ensure first item exists
        if (!this.track || !this.track.children.length) return;
        const item = this.track.children[0];
        const rect = item.getBoundingClientRect();
        const style = window.getComputedStyle(item);
        const ml = parseFloat(style.marginLeft) || 0;
        const mr = parseFloat(style.marginRight) || 0;
        // width includes margins (so translate math is consistent)
        this.itemWidth = Math.round(rect.width + ml + mr);
        // set explicit widths to avoid fractional rounding issues
        Array.from(this.track.children).forEach(child => {
          child.style.width = `${rect.width}px`; // keep content width equal
          // we rely on margins so track width calculation uses itemWidth
        });
        // set explicit track width
        this.track.style.width = `${this.track.children.length * this.itemWidth}px`;
      }

      setupEventListeners() {
        // pointer events (support mice and touch via pointer)
        this._onPointerDown = this.onPointerDown.bind(this);
        this._onPointerMove = this.onPointerMove.bind(this);
        this._onPointerUp = this.onPointerUp.bind(this);
        this._onResize = this.onResize.bind(this);
        this._onTransitionEnd = this.onTransitionEnd.bind(this);

        this.track.addEventListener('pointerdown', this._onPointerDown, { passive: true });
        window.addEventListener('pointermove', this._onPointerMove, { passive: true });
        window.addEventListener('pointerup', this._onPointerUp);
        window.addEventListener('resize', this._onResize);
        this.track.addEventListener('transitionend', this._onTransitionEnd);

        // pause auto-scroll on hover/focus
        this.track.addEventListener('mouseenter', () => this.stopAuto());
        this.track.addEventListener('mouseleave', () => this.startAuto());
        // keyboard support for visible (original) items
        Array.from(this.querySelectorAll('.ai-why-buy-carousel-item-{{ ai_gen_id }}')).forEach((el, idx) => {
          el.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft') { e.preventDefault(); this.prev(); }
            if (e.key === 'ArrowRight') { e.preventDefault(); this.next(); }
          });
        });

        // optional auto-scroll for user-friendliness
        this.startAuto();
      }

      removeEventListeners() {
        this.track.removeEventListener('pointerdown', this._onPointerDown);
        window.removeEventListener('pointermove', this._onPointerMove);
        window.removeEventListener('pointerup', this._onPointerUp);
        window.removeEventListener('resize', this._onResize);
        this.track.removeEventListener('transitionend', this._onTransitionEnd);
        this.stopAuto();
      }

      onPointerDown(e) {
        // only left mouse or touch
        if (e.pointerType === 'mouse' && e.button !== 0) return;
        this.isDragging = true;
        this.startX = e.clientX;
        this.initialTransform = this.getCurrentTransform();
        this.track.style.transition = 'none';
        // set pointer capture so move/up captured
        try { e.target.setPointerCapture(e.pointerId); } catch (err) {}
        this.stopAuto();
      }

      onPointerMove(e) {
        if (!this.isDragging) return;
        this.currentX = e.clientX;
        const delta = this.currentX - this.startX;
        const newTransform = this.initialTransform + delta;
        this.track.style.transform = `translateX(${newTransform}px)`;
      }

      onPointerUp(e) {
        if (!this.isDragging) return;
        this.isDragging = false;
        const delta = (this.currentX || this.startX) - this.startX;
        const threshold = Math.max(30, this.itemWidth / 4);
        this.track.style.transition = `transform ${this.transitionDuration}ms ease`;

        if (Math.abs(delta) > threshold) {
          if (delta > 0) this.prev();
          else this.next();
        } else {
          // snap back to current
          this.updatePosition();
        }

        this.startAuto();
      }

      onResize() {
        clearTimeout(this._resizeTimer);
