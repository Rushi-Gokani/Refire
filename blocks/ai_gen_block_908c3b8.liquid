{% doc %}
  @prompt
    a split screen section, with an image on the left half side, and on the right side we have one headline, followed by a paragraph content, followed by a button. On mobile, the right half of the section comes up first, followed by the left half of the section. i need the input/control fields of all of these things, the image, the texts, the button text, button looks, button links. the background colour of the section, the section needs to be horizontally center aligned but in customise give option to change screen from left to right

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-screen-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-split-screen-container-{{ ai_gen_id }} {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-split-screen-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 500px;
    align-items: center;
    gap: 40px;
  }

  {% if block.settings.layout == 'image_right' %}
    .ai-split-screen-content-{{ ai_gen_id }} {
      grid-template-areas: "text image";}
    .ai-split-screen-image-{{ ai_gen_id }} {
      grid-area: image;
    }
    .ai-split-screen-text-{{ ai_gen_id }} {
      grid-area: text;
    }
  {% else %}
    .ai-split-screen-content-{{ ai_gen_id }} {
      grid-template-areas: "image text";
    }
    .ai-split-screen-image-{{ ai_gen_id }} {
      grid-area: image;
    }
    .ai-split-screen-text-{{ ai_gen_id }} {
      grid-area: text;
    }
  {% endif %}

  .ai-split-screen-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 400px;
  }

  .ai-split-screen-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-split-screen-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;position: relative;
  }

  .ai-split-screen-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-split-screen-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-split-screen-text-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding: 20px 0;
  }

  .ai-split-screen-headline-{{ ai_gen_id }} {
    color: {{ block.settings.headline_color }};
    font-size: {{ block.settings.headline_size }}px;
    font-weight: {{ block.settings.headline_weight }};
    line-height: 1.2;
    margin: 0;
  }

  .ai-split-screen-paragraph-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  .ai-split-screen-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: {{ block.settings.button_text_weight }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    transition: all 0.3s ease;
    align-self: flex-start;
  }

  .ai-split-screen-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-split-screen-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      grid-template-areas: "text" "image";
      gap: 30px;
    }

    .ai-split-screen-image-wrapper-{{ ai_gen_id }} {
      min-height: 300px;
    }

    .ai-split-screen-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.8 }}px;
    }

    .ai-split-screen-text-content-{{ ai_gen_id }} {
      gap: 16px;
    }
  }
{% endstyle %}<div class="ai-split-screen-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-split-screen-container-{{ ai_gen_id }}">
    <div class="ai-split-screen-content-{{ ai_gen_id }}">
      <div class="ai-split-screen-image-{{ ai_gen_id }}"><div class="ai-split-screen-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 800 }}"
              alt="{{ block.settings.image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
          {% else %}
            <div class="ai-split-screen-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-split-screen-empty-state-{{ ai_gen_id }}">
                Add an image to get started
              </div>
            </div>
          {% endif %}
        </div>
      </div>

      <div class="ai-split-screen-text-{{ ai_gen_id }}">
        <div class="ai-split-screen-text-content-{{ ai_gen_id }}">
          {% if block.settings.headline != blank %}
            <h2 class="ai-split-screen-headline-{{ ai_gen_id }}">
              {{ block.settings.headline }}
            </h2>
          {% endif %}

          {% if block.settings.paragraph != blank %}
            <div class="ai-split-screen-paragraph-{{ ai_gen_id }}">
              {{ block.settings.paragraph }}
            </div>
          {% endif %}

          {% if block.settings.button_text != blank %}
            <a
              href="{{ block.settings.button_link | default: '#' }}"
              class="ai-split-screen-button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

